<% if @project %>
  <div class="page-header">
    <h3><%= @project.name %> <small>Optimization Categories</small><%= link_to "+ New Optimization Category", new_project_optimizable_class_path(@project), :class => "btn btn-primary pull-right" %></h3>

  </div>
<% end %>



<table class="table table-hover">
  <thead>
    <td>Category</td>
    <td># items</td>
    <td># variations</td>
    <td></td>
  </thead>
  <% @project.optimizable_classes.each do |optimizable_class| %>
    <tr>
      <td><%= link_to optimizable_class.name, optimizable_class %></td>
      <td><span class="badge"><%= optimizable_class.optimizables_count %></span></td>
      <td><span class="badge"><%= optimizable_class.optimizable_variants_count %></span></td>
      <td><%= link_to "Delete", optimizable_class, :method => :delete, :class => "btn btn-danger", :data => { :confirm => "Are you sure? This action cannot be reversed." } %></td>
    </tr>
  <% end %>
</table>
